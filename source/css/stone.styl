.widget-wrap
  .widget
    font-size: 1em;
    a
      &:hover
        text-decoration: none;
    ul
      li
        padding-top: 2px;
        padding-bottom: 2px;
        &:hover
            background-color: #F2F2F2;
            border-left: 3px red solid;
            margin-left: -15px;
            margin-right: -15px;
            padding-left: 12px;
            padding-right: 15px;
            text-decoration: none;
            
.category-list
  .category-list-item
    &:hover
      background-color: #fff !important;
      border-left: 0px !important;
      margin-left: 0px !important;
      margin-right: 0px !important;
      padding-left: 0px !important;
      padding-right: 0px !important;
                      
.article-statement
  font-size: 0.85em;
  line-height: 1.6em;
  margin: 0.5em 0;
  text-shadow: 0 1px #fff;
  color: #999;
  a
    &:hover
      text-decoration: none;
      